---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const posts = await getCollection("posts");
---

<Layout title="Welcome to Astro.">
  <main>
    <h1>Posts</h1>
    <ul>
      {
        posts.map((post) => {
          return (
            <li>
              <a href={`posts/${post.slug}`}>{post.data.title}</a>
            </li>
          );
        })
      }
    </ul>
  </main>
</Layout>

