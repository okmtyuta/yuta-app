---
import type { CollectionEntry } from 'astro:content'

interface Props {
  post: CollectionEntry<'posts'>
}


const { post } = Astro.props
---

<div class={'postcard'}>
  <a href={`posts/${post.slug}`}>
    <img src={`/src/images/posts/${post.slug}/thumbnail.jpg`} />

    <div class="title">{post.data.title}</div>
  </a>
</div>

<style scoped>
  .postcard {
    @media screen and (max-width: 767px) {
      width: 90%;
    } /* tablet */
    @media screen and (min-width: 768px) and (max-width: 1024px) {
      width: 30%;
    } /* pc */
    @media screen and (min-width: 1025px) {
      width: 30%;
    }
  }
  .postcard:hover {
    opacity: 0.7;
    transition: 0.2s;
  }
  .postcard img {
    width: 100%;
    padding: 0;
    height: auto;
  }
  .postcard a {
    text-decoration: none;
  }
  .postcard .title {
    margin-top: 6px;
    margin-bottom: 16px;
    @media screen and (max-width: 767px) {
      font-size: 16px;
    } /* tablet */
    @media screen and (min-width: 768px) and (max-width: 1024px) {
      font-size: 16px;
    } /* pc */
    @media screen and (min-width: 1025px) {
      font-size: 18px;
    }
    font-weight: 700;
  }
</style>
